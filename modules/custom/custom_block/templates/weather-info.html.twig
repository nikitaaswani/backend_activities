{% if items or empty %}
  {%- if title is not empty -%}
    <h3>{{ title }}</h3>
  {%- endif -%}

  {%- if items -%}
    <div id="weather_details">
      <div class="front">
      {%- for key, item in items -%}
        <div class="{{key}}">
          <span class="label">
            {{ item.label }}
          </span>
          <span class="content">
            {{ item.content }}
          </span>
        </div>
      {%- endfor -%}
    </div>
    <div class="back">
      <p>thank u</p>
    </div>
  </div>
  {%- else -%}
    {{- empty -}}
  {%- endif -%}
{%- endif -%}
